printf("  mL/2 = %f mH\n",fix(L3*(10^3)*10)/10);
printf("  mC = %f microfarads\n",fix(C2*(10^6)*10000)/10000);
printf("  (1-m^2)L/4m = %f mH\n\n",fix(L4*(10^3)*10)/10);
