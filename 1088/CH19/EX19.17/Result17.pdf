# Enter the name of the perlscript file whichever you desire  

  #!/usr/bin/perl 
# Script: hither.pl  - Find files that are less than 2.4 hours old  
#
foreach $file (`dir /B`) { 
chop($file) ;
if (($m_age = -M $file) < 0.1) {                     #tenth of a day i.e 2.4 hours
           printf  " File %s was last modified %0.3f day(s) back \n",$file,$m_age ; 
       }
}

# type the following command in the command line interpreter as soon as it appears 
       "  hither.pl [THE NUMBERS AS COMMANDLINE ARGUMENTS]    "[ENTER]


